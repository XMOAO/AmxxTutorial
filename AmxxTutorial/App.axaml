<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:semi="https://irihi.tech/semi"  
             xmlns:u-semi="https://irihi.tech/ursa/themes/semi"
             xmlns:panels="clr-namespace:Tabalonia.Panels;assembly=Tabalonia"
             xmlns:tabtheme="clr-namespace:Tabalonia.Themes.Custom;assembly=Tabalonia"
             xmlns:local="using:AmxxTutorial"
             x:Class="AmxxTutorial.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        
    </Application.DataTemplates>

    <Application.Styles>
      <FluentTheme DensityStyle="Normal" />
      <tabtheme:CustomTheme />
      <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
      <StyleInclude Source="avares://AmxxTutorial/Styles/TabaloniaTabsControl.axaml" />
      <semi:SemiTheme Locale="zh-CN" />
      <u-semi:SemiTheme Locale="zh-CN"/>
      <semi:SemiPopupAnimations />
    </Application.Styles>
  
    <Application.Resources>
      
      <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
          <ResourceInclude Source="Themes/ThemesIndex.axaml" />
          <ResourceInclude Source="Resources/Locales/Locales_en-us.axaml"/>
          <ResourceInclude Source="Resources/Locales/Locales_zh-cn.axaml"/>
          <ResourceInclude Source="Resources/Locales/Locales_zh-tw.axaml"/>
        </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
      <SolidColorBrush x:Key="OverlayDialogMaskBrush" Color="#FF16161A" Opacity="0.1" />
    </Application.Resources>
</Application>